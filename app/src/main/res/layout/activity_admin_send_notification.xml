<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5F7FA">

    <TextView
        android:text="Soạn Thông báo / Khuyến mãi"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="24dp"/>

    <TextView text="Tiêu đề" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/etNotiTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Ví dụ: Giảm giá mùa hè..."
        android:background="@android:drawable/editbox_background"
        android:layout_marginBottom="16dp"/>

    <TextView text="Nội dung chi tiết" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/etNotiMessage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="top|start"
        android:hint="Nhập nội dung khuyến mãi..."
        android:background="@android:drawable/editbox_background"
        android:layout_marginBottom="24dp"/>

    <RadioGroup
        android:id="@+id/rgType"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rbPromo"
            android:text="Khuyến mãi (Icon %)"
            android:checked="true"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rbSystem"
            android:text="Thông báo chung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnSendAll"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Gửi cho tất cả khách hàng"
        android:textStyle="bold"
        android:backgroundTint="#1976D2"/>

</LinearLayout>