<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/layoutTierBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvTierName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Thành viên Bạc"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333"/>

            <TextView
                android:id="@+id/tvTierReq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="> 5.000.000 đ"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#555"
                android:background="@drawable/bg_circle_white_translucent"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"/>
        </LinearLayout>

        <View android:background="#000000" android:alpha="0.1" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginBottom="8dp"/>

        <TextView
            android:text="Quyền lợi:"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTierBenefits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Giảm giá 5%\n- Check-in ưu tiên"
            android:textSize="13sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#424242"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>