<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgNotiIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:background="@drawable/bg_circle_gray"
            android:src="@drawable/ic_notifications"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNotiTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiêu đề thông báo"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvNotiMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung thông báo ở đây..."
                android:textSize="14sp"
                android:textColor="#555"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvNotiTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30 12/12"
                android:textSize="12sp"
                android:textColor="#999"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <View
            android:id="@+id/viewUnreadDot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/bg_circle_red"
            android:layout_marginStart="8dp"
            android:backgroundTint="#1976D2"
            android:visibility="visible"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>