<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <RelativeLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#000"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán an toàn"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutHeader"
        android:layout_above="@id/layoutBottomBar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFF">

                    <TextView
                        android:text="Tổng tiền đơn hàng"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvTotalAmount"
                        android:text="5.000.000 đ"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1C2E4A"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View android:background="#E0E0E0" android:layout_height="1dp" android:layout_width="match_parent" android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvRoomNamePayment"
                        android:text="Phòng Deluxe View Biển (3 đêm)"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView android:text="Tùy chọn thanh toán" android:textStyle="bold" android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioGroup
                android:id="@+id/radioGroupPaymentOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rbPayFull"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán toàn bộ (100%)"
                    android:checked="true"
                    android:padding="8dp"
                    android:background="@drawable/bg_radio_selector"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/rbPayDeposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đặt cọc trước (50%)"
                    android:padding="8dp"
                    android:background="@drawable/bg_radio_selector"/>
                <TextView
                    android:text="* Phần còn lại sẽ thanh toán tại khách sạn khi nhận phòng."
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RadioGroup>

            <TextView android:text="Phương thức thanh toán" android:textStyle="bold" android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/btnMethodCard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_payment_method_selected"
                    android:layout_marginEnd="8dp">
                    <ImageView android:src="@android:drawable/ic_lock_idle_lock" app:tint="#1976D2" android:layout_width="24dp" android:layout_height="24dp"/>
                    <TextView android:text="Thẻ quốc tế" android:textSize="12sp" android:textStyle="bold" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnMethodMomo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_payment_method_unselected"
                    android:layout_marginEnd="8dp">
                    <ImageView android:src="@android:drawable/ic_menu_send" app:tint="#757575" android:layout_width="24dp" android:layout_height="24dp"/>
                    <TextView android:text="Ví điện tử" android:textSize="12sp" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnMethodBank"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_payment_method_unselected">
                    <ImageView android:src="@android:drawable/ic_menu_share" app:tint="#757575" android:layout_width="24dp" android:layout_height="24dp"/>
                    <TextView android:text="Chuyển khoản" android:textSize="12sp" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCardInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFF"
                android:padding="16dp"
                android:visibility="visible">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Số thẻ"
                    android:layout_marginBottom="12dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:inputType="number"
                        android:maxLength="19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Ngày hết hạn (MM/YY)"
                        android:layout_marginEnd="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:inputType="datetime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="CVV">
                        <com.google.android.material.textfield.TextInputEditText
                            android:inputType="numberPassword"
                            android:maxLength="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvRedirectMessage"
                android:text="Bạn sẽ được chuyển hướng đến ứng dụng thanh toán sau khi bấm xác nhận."
                android:gravity="center"
                android:padding="20dp"
                android:visibility="gone"
                android:textColor="#555"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layoutBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmPayment"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Thanh toán 5.000.000 đ"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:backgroundTint="#005B6F"/>
    </LinearLayout>

</RelativeLayout>