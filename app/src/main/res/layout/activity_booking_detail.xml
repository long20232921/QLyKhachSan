<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"> <RelativeLayout
    android:id="@+id/layoutHeader"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#FFFFFF"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="#000"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi tiết Đơn hàng"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_centerInParent="true"/>
</RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutHeader"
        android:layout_above="@id/layoutBottomBar"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">
                        <TextView
                            android:id="@+id/tvBookingId"
                            android:text="#83291"
                            android:textStyle="bold"
                            android:textColor="#555"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvStatusTag"
                            android:text="Đã xác nhận"
                            android:textSize="12sp"
                            android:textColor="#1976D2"
                            android:background="#E3F2FD"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        android:layout_marginBottom="12dp">
                        <ImageView
                            android:id="@+id/imgRoomDetail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_hotel"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvRoomNameDetail"
                        android:text="Deluxe Ocean View"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="2 Người lớn • 1 Giường đôi • Hướng biển"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView android:text="Thời gian lưu trú" android:textStyle="bold" android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFFFFF">

                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:src="@drawable/ic_launcher_foreground" app:tint="#1976D2" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginEnd="12dp"/>
                        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <TextView android:text="Nhận phòng" android:textSize="12sp" android:textColor="#757575" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/tvCheckIn" android:text="14:00, 12 Thg 10, 2023" android:textStyle="bold" android:textColor="#000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View android:background="#E0E0E0" android:layout_marginStart="11dp" android:layout_width="2dp" android:layout_height="20dp" android:layout_marginVertical="4dp"/>

                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:src="@drawable/ic_launcher_foreground" app:tint="#757575" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginEnd="12dp"/>
                        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <TextView android:text="Trả phòng" android:textSize="12sp" android:textColor="#757575" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/tvCheckOut" android:text="12:00, 15 Thg 10, 2023" android:textStyle="bold" android:textColor="#000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/tvTotalDays" android:text="3 đêm" android:textColor="#1976D2" android:textStyle="bold" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
                <TextView android:text="Dịch vụ đi kèm" android:textStyle="bold" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                <TextView android:text="Thêm dịch vụ" android:textColor="#1976D2" android:textSize="13sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:id="@+id/layoutServiceSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"> <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:text="Dịch vụ đi kèm"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvAddService"
                        android:text="Thêm dịch vụ"
                        android:textColor="#1976D2"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:id="@+id/containerServices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#FFFFFF"
                            android:padding="16dp">

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView android:text="Chi tiết thanh toán" android:textStyle="bold" android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFFFFF">

                    <LinearLayout android:layout_marginBottom="8dp" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:text="Giá phòng" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                        <TextView android:id="@+id/tvRoomPriceTotal" android:text="2.500.000đ" android:textColor="#000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout android:layout_marginBottom="8dp" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:text="Dịch vụ" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                        <TextView android:text="650.000đ" android:textColor="#000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View android:background="#E0E0E0" android:layout_height="1dp" android:layout_width="match_parent" android:layout_marginVertical="8dp"/>

                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:text="Tổng chi phí" android:textStyle="bold" android:textSize="16sp" android:textColor="#000" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                        <TextView android:id="@+id/tvFinalPrice" android:text="3.150.000đ" android:textStyle="bold" android:textSize="18sp" android:textColor="#1976D2" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layoutBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="16dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPayment"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Thanh toán ngay"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:cornerRadius="8dp"
            app:backgroundTint="#005B6F"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelBooking"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="Hủy phòng"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                app:strokeColor="#D32F2F"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                app:backgroundTint="#FFFFFF"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditBooking"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="Sửa đổi"
                android:textColor="#1976D2"
                android:textStyle="bold"
                app:strokeColor="#1976D2"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                app:backgroundTint="#FFFFFF"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>