<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="100dp"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/imgRoomDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_hotel" />

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/gradient_black_top"/>
            <ImageView
                android:id="@+id/btnBackDetail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/bg_circle_white_translucent"
                app:tint="#FFFFFF"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_top_white"
            android:layout_marginTop="-20dp"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Phòng Ở Đây"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1C2E4A"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDetailRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐ 4.8 (Tuyệt vời)"
                    android:textColor="#FF9800"
                    android:textStyle="bold"/>

                <View android:layout_width="1dp" android:layout_height="12dp" android:background="#ccc" android:layout_marginHorizontal="10dp"/>

                <TextView
                    android:text="Xem bản đồ"
                    android:textColor="#007AFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View android:background="#F0F0F0" android:layout_marginVertical="20dp" android:layout_width="match_parent" android:layout_height="1dp"/>

            <TextView
                android:text="Tiện nghi phổ biến"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <LinearLayout android:orientation="vertical" android:gravity="center" android:layout_marginEnd="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView android:src="@android:drawable/ic_menu_mylocation" android:layout_width="24dp" android:layout_height="24dp" app:tint="#757575"/>
                    <TextView android:text="Wifi" android:textSize="12sp" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:gravity="center" android:layout_marginEnd="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView android:src="@android:drawable/ic_menu_always_landscape_portrait" android:layout_width="24dp" android:layout_height="24dp" app:tint="#757575"/>
                    <TextView android:text="AC" android:textSize="12sp" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:gravity="center" android:layout_marginEnd="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView android:src="@android:drawable/ic_menu_agenda" android:layout_width="24dp" android:layout_height="24dp" app:tint="#757575"/>
                    <TextView android:text="Tivi" android:textSize="12sp" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <View android:background="#F0F0F0" android:layout_marginVertical="20dp" android:layout_width="match_parent" android:layout_height="1dp"/>

            <TextView
                android:text="Về phòng này"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDetailDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp"
                android:textColor="#555"
                android:text="Mô tả chi tiết phòng sẽ hiển thị ở đây..."/>

        </LinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Giá / đêm"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvDetailPrice"
                android:text="2.500.000"
                android:textSize="20sp"
                android:textColor="#1C2E4A"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBookNow"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:text="Đặt phòng"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            android:backgroundTint="#007AFF"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>